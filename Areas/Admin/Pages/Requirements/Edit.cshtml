@page
@model VijayLaxmi.Areas.Admin.Pages.Requirements.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Requirement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Requirement.Id" />
            <div class="form-group">
                <label asp-for="Requirement.SiteId" class="control-label"></label>
                <input asp-for="Requirement.SiteId" class="form-control" />
                <span asp-validation-for="Requirement.SiteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requirement.ItemName" class="control-label"></label>
                <input asp-for="Requirement.ItemName" class="form-control" />
                <span asp-validation-for="Requirement.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requirement.Description" class="control-label"></label>
                <input asp-for="Requirement.Description" class="form-control" />
                <span asp-validation-for="Requirement.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requirement.Qty" class="control-label"></label>
                <input asp-for="Requirement.Qty" class="form-control" />
                <span asp-validation-for="Requirement.Qty" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Requirement.Hostatus" /> @Html.DisplayNameFor(model => model.Requirement.Hostatus)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Requirement.SiteStatus" /> @Html.DisplayNameFor(model => model.Requirement.SiteStatus)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Requirement.AddedDate" class="control-label"></label>
                <input asp-for="Requirement.AddedDate" class="form-control" />
                <span asp-validation-for="Requirement.AddedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
