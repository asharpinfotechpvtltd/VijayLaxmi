@page "{handler?}"
@model VijayLaxmi.Areas.SiteIncharge.Pages.EmpAttendance.ViewAttendanceModel
@{
    int i = 1;
}

<div class="row">
    <div class="col-md-12">
        <form method="get" asp-page-handler="Search">
            <div class="form-group row">

                <div class="col-sm-3">
                    <input type="date" name="Startdate" placeholder="Startdate" min="01/09/2022" max="30/12/2050" class="form-control" asp-for="Startdate" />

                </div>
                <div class="col-sm-3">
                    <input type="date" name="EndDate" min="01/01/2000" max="31/12/2050" placeholder="EndDate" class="form-control" asp-for="EndDate" />

                </div>
                <div class="col-sm-4">
                    <select class="form-control  mt1" id="Employee" asp-items="@Model.Employee" name="Employeeid">
                        <option value="0">Select Employee</option>
                    </select>
                </div>
                <div class="col-sm-2">
                    <button type="submit" class="btn mb-2 mr-1 mt1" value="Search" id="Search" style="background-color:blue; color:white;"> <i class="fa fa-search-plus" aria-hidden="true"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
@if (Model.AttendanceList != null)
{
    <div class="table-responsive">
        <table class="table table-bordered" id="emplist">
            <thead class="text-center" style="background-color:black; color:red;">
                <tr>
                    <th>S No.</th>
                    <th>Emp Code</th>
                    <th>
                        Name
                    </th>
                    <th>Date</th>
                    <th>
                        Month
                    </th>
                    <th>
                        Year
                    </th>
                    <th>
                        Attendance
                    </th>

                    <th>
                        Marked
                    </th>

                    <th>InTime</th>
                    <th>OutTime</th>
                    <th>WorkTime</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AttendanceList)
                {
                    if (item.Marked == 1)
                    {
                        <tr class="text-center" bgcolor="red" style="color:white;">
                            <td>@i</td>
                            <td>@item.Empcode</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Month)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Year)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Attendence)
                            </td>



                            <td>
                                @Html.DisplayFor(modelItem => item.Marked)


                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.InTime)


                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OutTime)


                            </td>
                            <td>
                                @Math.Round(@item.WorkTime,2)


                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr class="text-center">
                            <td>@i</td>
                            <td>@item.Empcode</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Month)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Year)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Attendence)
                            </td>



                            <td>
                                @Html.DisplayFor(modelItem => item.Marked)


                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.InTime)


                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OutTime)


                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkTime)


                            </td>
                        </tr>
                    }
                    i++;
                }
            </tbody>
        </table>
    </div>
}




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    }
