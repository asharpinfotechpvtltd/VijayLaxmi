@page
@model VijayLaxmi.Areas.SiteIncharge.Pages.Employees.EmployeeDocumentsModel
@{
}
<h4>Add Employees</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">AAdhar No.</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" required asp-for="@Model.Aadharno" readonly id="AAdharno" />
                </div>
                <label class="col-sm-1 col-form-label">AAdhar/Khattaa Front</label>
                <div class="col-sm-5">
                    <input type="file" class="form-control" name="DocumentFrontFileName" id="Pancard" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">AAdhar/Khattaa Back</label>
                <div class="col-sm-5">
                    <input type="file" asp-for="document.DocumentBackFileName" name="DocumentBackFileName" id="Name" required class="form-control">
                </div>
                <label class="col-sm-1 col-form-label">Pan Card</label>
                <div class="col-sm-5">
                    <input type="file" asp-for="document.PancardFileName" id="PancardFileName" name="PancardFileName"  class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-1 col-form-label">TIC</label>
                <div class="col-sm-5">
                    <input type="file" asp-for="document.TicFileName" name="TicFileName" id="Name" class="form-control">
                </div>
                <label class="col-sm-1 col-form-label">Signed Document</label>
                <div class="col-sm-5">
                    <input type="file" asp-for="document.SignedDocumentName" id="SignedDocument" name="SignedDocument" required class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <button type="submit" id="submit" class="btn btn-danger btn-md btn-block waves-effect text-center m-b-20">Add Family Detail</button>
                </div>
            </div>
        </form>
    </div>
</div>
